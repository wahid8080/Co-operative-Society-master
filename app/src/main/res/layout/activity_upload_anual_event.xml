<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadAnualEvent">

    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:onClick="chooseImageForAnnualEvent"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginTop="50dp"
            android:id="@+id/chooseImageButton"
            android:text="Choose Image"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="60dp" />
        <EditText
            android:layout_below="@id/chooseImageButton"
            android:hint="Type Of Program"
            android:id="@+id/uploadTypeOfProgram"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <EditText
            android:layout_below="@id/uploadTypeOfProgram"
            android:hint="Program Location"
            android:id="@+id/uploadLocationOfProgram"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <EditText
            android:gravity="top"
            android:id="@+id/uploadHistoryOfProgram"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/uploadLocationOfProgram"
            android:layout_alignParentTop="false"
            android:layout_marginTop="40dp"
            android:hint="Program History" />


        <Button
            android:onClick="uploadanualEvent"
            android:textSize="22dp"
            android:id="@+id/buttonId"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="Submit" />
    </RelativeLayout>


</RelativeLayout>